##===============================================
## CONFIG
##===============================================
export ORIGIN="node"
export ENTITY="app"
export TAG="1.0.0"
export NAME="nodeapp01"
export IMAGE="$ORIGIN/$ENTITY:$TAG"
HOSTNAME="lnx01"

export CWD=$(pwd)

##===============================================
## CLI SHORTHAND FUNCTIONS
##===============================================
x_build() {
    docker build -t $IMAGE .
}

x_start() {
   docker run -h $HOSTNAME -dit -p 3000:3000 --name $NAME $IMAGE
}

x_stop() {
   docker stop $NAME
}

x_rm() {
   docker rm -f $NAME
}

x_rmi() {
   docker rmi $(docker images $IMAGE -q)
}

x_setup() {
    x_build && \
    x_start
}

x_destroy() {
    x_rm && \
    x_rmi
}

x_rebuild() {
    x_stop && \
    x_rm && \
    x_rmi && \
    x_setup
}



#################################################
#################################################
#####  ---  LIST SHORTHAND FUNCTIONS ---    #####
#################################################
#################################################
x_ls() {
  echo "FUNCTIONS"
  echo "========="
  declare -F | grep "x_" | sed -E 's/declare -f //'
}



