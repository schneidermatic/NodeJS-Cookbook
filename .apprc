##----------------------------------------
## SETUP THE NODE PROJECT
##----------------------------------------
app_setup() {
    if [ ! -e "$CWD"/node_modules ]
    then
        npm install
    fi
}

##----------------------------------------
## RUN THE NODE APP
##----------------------------------------
app_run() {
    app_setup
    npm start
}

##----------------------------------------
## RUN THE NODE APP
##----------------------------------------
app_rm() {
    if [ -e "$CWD"/node_modules ]
    then
        rm -rf "$CWD"/node_modules
    fi
}

##########################################
##########################################
#####   ---   ALL COMMANDS    ---    #####
##########################################
##########################################
app_ls() {
  declare -F | grep "app_" | sed -E 's/declare -f //'
}
