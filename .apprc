APP_ENV=$HOME/.nodejshw2s

if [ ! -e $APP_ENV ]
then
  cp ./resources/templates/nodejshowtos $APP_ENV
fi

source $HOME/.nodejshowtos

if [ -z $PROJECT_HOME ]
then
    echo "Please set \$PROJECT_HOME in '$APP_ENV' file!"
fi

##----------------------------------------
## CREATE A NEW HOWTO PROJECT
##----------------------------------------
app_new() {
    PROJECT_NAME=$1
    PROJECT_PATH=$PROJECT_HOME/"${PROJECT_NAME}"

    if [ ! -e "${PROJECT_PATH}" ]
    then
        echo "Hello"
        mkdir -p "${PROJECT_PATH}"
        cp -r $PROJECT_HOME/resources/templates/app "${PROJECT_PATH}"
    fi
}

##----------------------------------------
## REMOVE A HOWTO PROJECT
##----------------------------------------
app_purge() {
    PROJECT_NAME=$1
    PROJECT_PATH=$PROJECT_HOME/"${PROJECT_NAME}"

    if [ -e "${PROJECT_PATH}" ]
    then
        rm -r "${PROJECT_PATH}"
    fi
}

##----------------------------------------
## SETUP THE NODE PROJECT
##----------------------------------------
app_setup() {
    if [ ! -e "$CWD"/node_modules ]
    then
        npm install
    fi
}

##----------------------------------------
## RUN THE NODE APP
##----------------------------------------
app_run() {
    app_setup
    npm start
}

##----------------------------------------
## REMOVE 'node_modules'
##----------------------------------------
app_rm() {
    if [ -e "$CWD"/node_modules ]
    then
        rm -rf "$CWD"/node_modules
    fi
}


